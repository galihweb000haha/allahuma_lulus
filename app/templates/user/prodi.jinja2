{% extends "layout_dashboard.jinja2" %}
{% block pagestyles %}
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
{% endblock %}
{% block content %}
<!-- Basic Bootstrap Table -->
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card">
    <h5 class="card-header">Admin Prodi</h5>

    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="tahun_angkatan" class="form-label">Pilih Tahun Angkatan</label>
                    <select class="form-select my_selection" id="tahun_angkatan" aria-label="Default select example">
                        <option selected>Open this select menu</option>
                        <option value="1">2019</option>
                        <option value="2">2018</option>
                        <option value="3">2017</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="Prodi" class="form-label">Pilih Prodi</label>
                    <select class="form-select my_selection" id="Prodi" aria-label="Default select example">
                        <option selected>Open this select menu</option>
                        <option value="1">Teknik Mesin</option>
                        <option value="2">Perhotelan</option>
                        <option value="3">Keperawanan</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <div class="table-responsive text-nowrap">
        <table class="table">
        <thead>
            <tr>
            <th>No</th>
            <th>NIM</th>
            <th>Nama</th>
            <th>Status</th>
            <th></th>
            </tr>
        </thead>
        <tbody class="table-border-bottom-0">
        {% for mhs in mahasiswa %}
            <tr>
                <td><i class="fab fa-angular fa-lg text-danger me-3"></i> {{loop.index}}</td>
                <td>{{mhs['nim']}}</td>
                <td>
                    {{mhs['name']}}
                </td>
                <td><span class="badge bg-label-primary me-1">Active</span></td>
                <td>
                    <div class="dropdown">
                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                        <i class="bx bx-dots-vertical-rounded"></i>
                    </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="javascript:void(0);"
                        ><i class="bx bx-edit-alt me-1"></i> Edit</a
                        >
                        <a class="dropdown-item" href="javascript:void(0);"
                        ><i class="bx bx-trash me-1"></i> Delete</a
                        >
                    </div>
                    </div>
                </td>
            </tr>
        {% endfor %}
        {% if not mahasiswa %}
        <tr>
            <td colspan="5">
                <p class="text-center mt-2">Data belum tersedia !</p>
            </td>
        </tr>
        {% endif %}
        </tbody>
        </table>
    </div>
    </div>

</div>
    <!--/ Basic Bootstrap Table -->
    {% block additionalscripts %}

        <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

        <script>
            $(document).ready(function() {
                $('.my_selection').select2();
            });
        </script>

    {% endblock %}
{% endblock  %}
